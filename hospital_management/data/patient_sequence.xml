<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- We add data tag with no update so that it does not update the seq with every update back to 1 -->
    <data noupdate="1">

        <!-- Sequence for hospital.patient -->

        <record id="seq_hospital_patient" model="ir.sequence">
           <field name="name">Patient Sequence</field>

            <!-- Code of the Sequence -->
            <field name="code">hospital.patient</field>

            <!-- Prefix of the sequence -->
            <!-- Basically a string which will show before the no -->
            <field name="prefix">HP</field>

            <!-- Padding of zeros to make the no of 5 digits -->
            <field name="padding">5</field>

            <!-- What is the next no of the sequence -->
            <field name="number_next">1</field>

            <!-- The Increment after every use -->
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>

