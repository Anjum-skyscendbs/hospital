<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_patient">
        <t t-call="web.html_container">
                       <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">

                    <div class="page">
                        <span t-field="doc.patient_name"/>
                        <div class="row">
                                <div class="col-12">

                                    <table class="table table-bordered" style="table-layout: fixed" id="hash_config_table">
                                        <thead style="display: table-row-group">
                                            <tr>
                                                <th><span>Medicines</span></th>
                                                <th>gst</th>
                                                <th>sgst</th>
                                                <th>total_tax</th>
                                                <th>other_tax</th>
                                                <th>total_price</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <t t-foreach="doc.medicines_ids" t-as="medicines">
                                                <tr>
                                                    <td><span t-field="medicines.medicines_id.medicines_name"/></td>
<!--                                                    <td><span t-field="medicines.gst"/></td>-->
<!--                                                    <td><span t-field="medicines.sgst"/></td>-->
<!--                                                    <td><span t-field="medicines.total_tax"/></td>-->
<!--                                                    <td><span t-field="medicines.other_tax"/></td>-->
                                                    <td><span t-field="medicines.total_price"/></td>
                                                </tr>
                                            </t>

                                            <tr>
<!--                                                    <td>Total GST :<span t-esc="get_gst(doc.medicines_ids)"/></td>-->
<!--                                                    <td>Total SGST :<span t-esc="get_sgst(doc.medicines_ids)"/></td>-->
<!--                                                    <td>Total Tax :<span t-esc="get_total_tax(doc.medicines_ids)"/></td>-->
<!--                                                    <td>Other Tax :<span t-esc="get_other_tax(doc.medicines_ids)"/></td>-->
                                                    <td>Total Price :<span t-esc="get_total_price(doc.medicines_ids)"/></td>
                                                    <td></td>
                                                </tr>

                                        </tbody>
                                    </table>
                                </div>
                        </div>

                        <div>
                            <span t-esc="get_total_price(doc.medicines_ids)"/>
<!--                            <span t-esc="get_gst(doc.medicines_ids)"/>-->
<!--                            <span t-esc="get_sgst(doc.medicines_ids)"/>-->
<!--                            <span t-esc="get_total_tax(doc.medicines_ids)"/>-->
<!--                            <span t-esc="get_other_tax(doc.medicines_ids)"/>-->
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>