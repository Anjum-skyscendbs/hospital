<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view for Patient -->
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">view.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <h1>
                        <centre>Hospital Management System</centre>
                    </h1>
                </header>

                <sheet>
                    <br>
                        <h2>Patient Registration</h2>
                    </br>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <widget name="web_ribbon" title="Active" bg_color="bg-success"
                            attrs="{'invisible': [('active', '=', False)]}"/>

                    <div class="row">
                        <div class="col col-md-6">
                            <group>
                                <field name="patient_name" placeholder="Enter your name"/>
                                <field name="patient_id" placeholder="Enter your Id" invisible="false"/>
                                <!-- invisible is use for hidden the patient_id from user -->

                                <field name="email" widget="email" placeholder="Enter your email" required="True"/>
                                <field name="birthdate" placeholder="Enter your birthdate"/>
                                <field name="age" placeholder="Enter your age"/>
                                <field name="gender" placeholder="select the Gender" widget="radio"/>
                                <field name="active" invisible="true"/>
                                <field name="active"/>
                                <field name="blood_group" placeholder="Enter your Blood Group"/>
                                <field name="weight" placeholder="Enter your Weight"/>
                                <field name="height" placeholder="Enter your Height"/>
                                <field name="Diseases" placeholder="select the Diseases" widget="radio"/>
                                <field name="department_id" widget="Department"/>
                                <field name="ref"/>
                                <field name="sequence"/>

                            </group>
                        </div>


                        <div class="col col-md-6">
                            <group>
                                <field name="hospital_name" maxlength='4' placeholder="Enter hospital name"/>
                                <field name="phone_number" maxlength='10' placeholder="Enter your phone number"
                                       widget="phone"/>
                                <field name="password" placeholder="Enter your password" password="*"/>
                                <field name="address" placeholder="Enter your Address"/>
                                <field name="url" string="Website" widget="url"/>
                                <field name="is_admitted"/>
                                <field name="Marital_status" placeholder="Select your Marital status" status="*"/>
                                <field name="diagnosis_notes" placeholder="Enter your diagnosis notes"/>
                                <field name="checkup_date" placeholder="Enter your Checkup date"/>
                                <field name="priority" widget="priority"/>
                                <field name="description" placeholder="Enter your description"/>
                                <field name="medical_history" placeholder="Enter your Medical History" widget="html"/>
                                <field name="sign_in" widget="float_time"/>
                                <field name="facility_ids"/>

                                <button name="action_test" string="Button" type="object" class="oe_highlight"/>


                            </group>
                        </div>
                    </div>

                    <!--                    <separator string="additional information"/>-->
                    <!--                    <field name="additional_information"/>-->


                    <notebook>
                        <page name="additional_information" string="Additional Information">
                            <field name="additional_information"/>
                        </page>

                        <page name="pg_appointment" string="Appointment">
                            <field name="appointment_ids"/>
                        </page>

                        <page name="pg_facility" string="Facility">
                            <field name="facility_ids" widget="many2many_checkbox"/>
                        </page>


                        <!--                        <page name="pg_department" string="Department">-->
                        <!--                            <field name="department_id" widget="Many2one"/>-->
                        <!--                        </page>-->


                        <page name="pg_temp" string="Template">
                            <field name="template"/>
                        </page>

                    </notebook>

                </sheet>

                <footer>
                    <h1>Copyright 2024</h1>
                </footer>
            </form>
        </field>
    </record>


    <!-- Tree view / List view of patient -->
    <record id="view_hospital_tree" model="ir.ui.view">
        <field name="name">view.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="patient_name"/>
                <field name="age"/>
                <field name="birthdate"/>
                <!--                <field name="active"/>-->
                <field name="gender" widget="radio"/>
                <field name="blood_group"/>
                <field name="active" widget="boolean_toggle"/>

                <field name="facility_ids"/>
                <!--                <field name="department_id"/>-->
                <field name="sequence" widget="handle"/>


            </tree>
        </field>
    </record>

    <!-- Action of Hospital -->
    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- Application menu of Hospital -->
    <menuitem id="menu_hospital" name="Hospital"/>

    <!-- Main Menu of patient -->
    <menuitem id="menu_patient" name="Patient" parent="menu_hospital"/>
    <!--    <menuitem id="menu_facility" name="Facility" parent="menu_hospital"/>-->

    <!-- Menu of patient -->
    <menuitem id="menu_configuration" name="Configuration" parent="menu_hospital"/>
    <menuitem id="menu_appointment" name="Appointment" parent="menu_hospital"/>

    <menuitem id="menu_hospital_patient" action="action_patient" parent="menu_patient"/>


</odoo>
