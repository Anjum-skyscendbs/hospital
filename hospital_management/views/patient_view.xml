<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view for Patient -->
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">view.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">

                <sheet>
                    <h2>Patient Registration</h2>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <widget name="web_ribbon" title="Active" bg_color="bg-success" attrs="{'invisible': [('active', '=', False)]}"/>

                        <group>
                            <field name="patient_name"/>
                            <field name="patient_id"/>
                            <field name="age"/>
                            <field name="active" invisible="true"/>
                            <field name="weight"/>
                            <field name="height"/>
                            <field name="email" required="True"/>
                            <field name="phone_number" widget="phone"/>
                            <field name="address"/>
                            <field name="is_admitted"/>
                            <field name="birthdate" />
                            <field name="gender" widget="radio"/>
                            <field name="Marital_status"/>
                            <field name="notes"/>
                            <field name="diagnosis_notes"/>
                            <field name="last_checkup_date" />
                            <field name="description"/>
                            <field name="medical_history" widget="html"/>
                    </group>

                    <notebook>
                        <page string="Additional Information">

                        </page>

                        <page string="Other Details">
                            <field name="sign_in" /> <!-- Assuming it's a datetime field -->
                            <field name="priority" widget="integer"/> <!-- Corrected widget attribute -->
                            <field name="blood_group"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>>

    <!-- Tree view / List view of patient -->
    <record id="view_hospital_tree" model="ir.ui.view">
        <field name="name">view.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_name"/>
                <field name="age"/>
                <field name="birthdate"/>
                <field name="gender" widget="radio"/>
                <field name="medical_history" />
                <field name="blood_group" />
                <field name="patient_id" />
            </tree>
        </field>
    </record>

    <!-- Action of Hospital -->
    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Application menu of Hospital -->
    <menuitem id="menu_hospital" name="Hospital"/>

    <!-- Main Menu of patient -->
    <menuitem id="menu_patient" name="Patients" parent="menu_hospital"/>

    <!-- Menu of patient -->
    <menuitem id="menu_patient_patient" action="action_patient" parent="menu_patient"/>

</odoo>
