<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Form view of department-->
    <record id="view_department_form" model="ir.ui.view">
        <field name="name">view.department.form </field>
        <field name="model">hospital.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>

                        <field name="department" placeholder="select the department" widget="checkbox"/>
                        <field name="patient_name" placeholder="Enter your name"/>
                        <field name="age"/>
                        <field name="gender"/>
<!--                        <field name="birthdate"/>-->

<!--                        <field name="Marital_status"/>-->
                        <field name="is_admitted"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view of department-->
    <record id="view_department_tree" model="ir.ui.view">
        <field name="name">view.department.tree</field>
        <field name="model">hospital.department</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_name" placeholder="Enter your name"/>
                <field name="age"/>
                <field name="gender"/>

<!--                <field name="ref"/>-->

            </tree>
        </field>
    </record>

    <!-- Action of department-->

    <record id="action_department" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">hospital.department</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu of department-->
    <menuitem id="menu_department" action="action_department" parent="hospital_management.menu_configuration"/>

</odoo>















